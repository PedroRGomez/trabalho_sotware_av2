#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>

void printChildPid() {
  printf("pid do filho: %d\n", getpid());
}

void printParentPid() {
  printf("pid do pai: %d\n", getpid());
}

int main(void) {
  int i;
  pid_t pid;

  if ((pid = fork()) < 0) {
    perror("fork");
    exit(1);
  }

  if (pid == 0) {
    printChildPid();
  } else {
    printParentPid();
  }

  printf("Esse print serÃ¡ executado por ambos os processos\n\n");
  exit(0);
}
